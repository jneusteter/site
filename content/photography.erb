<div class="row">
  <div class="col-md-6">
    <h2>Gear</h2>
    <hr />
    <p>Canon EOS Rebel T3i</p>
  </div>
  <div class="col-md-6">
    <% @items.find_all('/photography/**/*').select { |img| img[:alt] == 'a' }.each do |img| %>
      <image-modal img-path="<%= img.path %>" src="<%= img.path(rep: :thumbnail) %>" alt="<%= img[:alt] %>"/>
    <% end %>
  </div>
</div>
