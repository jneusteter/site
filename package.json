{
  "name": "jneusteter",
  "version": "1.0.0",
  "description": "jneusteter personal site.",
  "main": "index.js",
  "scripts": {
    "dev": "webpack --config webpack.config.js --mode=development",
    "production": "webpack --no-progress --config webpack.config.js --mode=production",
    "watch": "npm run dev -- --watch",
    "nanoc": "bundle exec nanoc live",
    "nanoc_server": "bundle exec nanoc view -L -p 3001",
    "sync-pics": "rsync -aP --delete --exclude '*.yaml' content/photography/ john@jneusteter.ca:/home/john/www/jneusteter.ca/content/photography"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jneusteter/site.git"
  },
  "author": "jneusteter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jneusteter/site/issues"
  },
  "homepage": "https://github.com/jneusteter/site#readme",
  "dependencies": {
    "chart.js": "^2.8.0",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-eslint": "^3.6.0",
    "@vue/cli-service": "^3.6.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "eslint": "^5.16.0",
    "lint-staged": "^8.1.5",
    "vue-loader": "^15.7.0",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-command": "^0.4.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
